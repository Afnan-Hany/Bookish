@model Library.Models.Order

@{
    ViewData["Title"] = "Create New Order";
}

<form asp-action="Create" method="post">
    <div class="border p-2 mt-2 mx-auto" style="max-width: 500px;">
        <h2 class="mb-3">Create New Order</h2>
        
        <div class="form-group mb-2">
            <label asp-for="MemberId" class="control-label"></label>
            <select asp-for="MemberId" class="form-control form-control-sm" asp-items="ViewBag.Members"></select>
            <span asp-validation-for="MemberId" class="text-danger"></span>
        </div>

        @* <div class="form-group mb-2">
            <label asp-for="BookId" class="control-label"></label>
            <select asp-for="BookId" class="form-control form-control-sm" asp-items="ViewBag.Books"></select>
            <span asp-validation-for="BookId" class="text-danger"></span>
        </div> *@

        @* <div class="form-group mb-2">
            <label asp-for="Quantity" class="control-label"></label>
            <input asp-for="Quantity" class="form-control form-control-sm" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div> *@

        <div class="form-group mb-2">
            <label asp-for="OrderDate" class="control-label"></label>
            <input asp-for="OrderDate" class="form-control form-control-sm" type="date" />
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="TotalAmount" class="control-label"></label>
            <input asp-for="TotalAmount" class="form-control form-control-sm" />
            <span asp-validation-for="TotalAmount" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="OrderStatus" class="control-label"></label>
            <input asp-for="OrderStatus" class="form-control form-control-sm" />
            <span asp-validation-for="OrderStatus" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-2">
            <div class="d-inline-block">
                <input type="submit" value="Create Order" class="btn btn-primary btn-sm" />
            </div>
            <div class="d-inline-block">
                <a asp-action="Index" class="btn btn-secondary btn-sm">Back to Orders List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
